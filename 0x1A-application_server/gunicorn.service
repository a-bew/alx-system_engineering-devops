[Unit]
Description=Gunicorn service for AirBnB app
After=network.target

[Service]
User=ubuntu
Group=www-data
WorkingDirectory=/home/ubuntu/AirBnB_clone_v4
Environment="PATH=/AirBnB_clone_v4/web_dynamic/2-hbnb.py"
ExecStart=/usr/bin/tmux new-session -d '/usr/local/bin/gunicorn --workers 3 --bind 0.0.0.0:5003 web_dynamic.2-hbnb:app --access-logfile /tmp/airbnb-access.log --error-logfile /tmp/airbnb-error.log'

[Install]
WantedBy=multi-user.target
